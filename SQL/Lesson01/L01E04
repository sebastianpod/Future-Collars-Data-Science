ROP DATABASE IF EXISTS gift_list;
CREATE DATABASE IF NOT EXISTS gift_list;
USE gift_list;
DROP TABLE IF EXISTS gifts;
CREATE TABLE IF NOT EXISTS gifts
(
id INTEGER PRIMARY KEY AUTO_INCREMENT NOT NULL,
imie TEXT NOT NULL,
pomysl TEXT NOT NULL,
cena FLOAT NOT NULL,
sklep TEXT NOT NULL
);

